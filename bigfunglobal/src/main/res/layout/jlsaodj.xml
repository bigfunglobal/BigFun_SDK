<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/yaskd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="100dp"
        android:gravity="center"
        android:padding="15dp"
        android:text="The network is not connected or unavailable. Please connect the network and check whether the permission of the application is turned on!" />
<TextView
    android:layout_width="match_parent"
    android:layout_height="2dp"
    android:layout_marginTop="25dp"
    android:background="@color/browser_actions_bg_grey"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/oekacx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/yaskd"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp"
            android:text="set up" />

        <TextView
            android:layout_width="2dp"
            android:layout_height="wrap_content"
            android:background="@color/browser_actions_bg_grey"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/yaskd"
            android:layout_alignParentRight="true"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/urjasod"
            android:padding="10dp"
            android:text="cancel" />
    </LinearLayout>
</LinearLayout>